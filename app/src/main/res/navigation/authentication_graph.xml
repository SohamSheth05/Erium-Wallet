<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/authentication_graph"
    app:startDestination="@id/authViewPagerFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="io.horizontalsystems.bankwallet.modules.authentication.RegistrationFragment"
        android:label="RegistrationFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="io.horizontalsystems.bankwallet.modules.authentication.LoginFragment"
        android:label="LoginFragment"></fragment>
    <fragment
        android:id="@+id/createPasswordFragment"
        android:name="io.horizontalsystems.bankwallet.modules.authentication.ChangePasswordFragment"
        android:label="CreatePasswordFragment" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="io.horizontalsystems.bankwallet.modules.authentication.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/authViewPagerFragment"
        android:name="io.horizontalsystems.bankwallet.modules.authentication.AuthViewPagerFragment"
        android:label="AuthViewPagerFragment">
        <action
            android:id="@+id/action_authViewPagerFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
</navigation>